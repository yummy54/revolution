# some more ls aliases
alias c='clear'
alias h='history'
alias df='df -h'
alias ls='ls -asCF --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'

